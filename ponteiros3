#include <stdio.h>

void compra(int* conta, int valor) {
    *conta -= valor;
}

int main() {
    int conta1, conta2;
    int n= 5;
    int compras[] = {100, 50, 80, 30, 20}; 
    int valor;
    int i;

    printf("Digite o saldo da conta 1: ");
    scanf("%d", &conta1);

    printf("Digite o saldo da conta 2: ");
    scanf("%d", &conta2);

    for (i=0; i<n; i++) {
        valor = compras[i];

        if (conta1 >= conta2) {
            compra(&conta1, valor);
        } 
        else {
            compra(&conta2, valor);
        }

        printf("\nCompra de %d reais.\n", valor);
        printf("Saldo da conta 1: %d\n", conta1);
        printf("Saldo da conta 2: %d\n", conta2);
    }
