#include <stdio.h>

void troca(int* p1, int* p2) {
    int aux= *p1; 
    *p1= *p2;        
    *p2= aux;       
}

int main() {
    int a, b;
    
    printf("Insira um número: ");
    scanf("%d", &a);
    printf("Insira um número: ");
    scanf("%d", &b);
    
    printf("Antes da troca: a= %d, b= %d\n", a, b);

    troca(&a, &b);  

    printf("Depois da troca: a= %d, b= %d\n", a, b); 
    
    return 0;
}
